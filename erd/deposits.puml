@startuml depo_erd
'https://plantuml.com/object-diagram
'Opt+D to Preview

<style>
    document {
        BackGroundColor Linen
    }
    root {
        FontColor #?black:white
        LineColor gray
    }
</style>

title BANK_DEPOSITS_ERD

object BankDeposit {
    id: PK
    bank_name: str
    client_name: str
    description: str
    duration: int
    date_open: date
    date_close: date
    face_value: Decimal
    interest_rate
    incomes[]
}

object Income {
    id: PK
    value
    period
    date_payment
    deposit_id: FK
}

object JournalEntry {
    id: PK
    date
    amount
    units
    debit
    credit
    description
}

BankDeposit::income - Income::id


@enduml
